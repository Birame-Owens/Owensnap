# Configuration environnement PhotoEvent Backend

# Application
APP_NAME=PhotoEvent API
APP_VERSION=0.1.0
DEBUG=True
API_PREFIX=/api/v1

# Serveur
HOST=0.0.0.0
PORT=8000

# Base de données PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=photoevent_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=poiuy

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=photoevent

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Stockage S3 (MinIO local ou Backblaze B2)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=photoevent-photos
S3_REGION=us-east-1

# Sécurité
SECRET_KEY=change_this_secret_key_in_production_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Workers Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Traitement photos
MAX_PHOTO_SIZE_MB=50
MAX_PHOTOS_PER_EVENT=1000
THUMBNAIL_SIZE=400
MAX_WORKERS=4

# Reconnaissance faciale
FACE_DETECTION_CONFIDENCE=0.5
FACE_MATCH_THRESHOLD=0.6
MAX_FACES_PER_PHOTO=20

# Téléchargements
DOWNLOAD_LINK_EXPIRY_DAYS=7
MAX_DOWNLOADS_PER_LINK=10

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
